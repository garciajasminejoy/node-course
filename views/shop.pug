extends layouts/main-layout.pug 

block styles 
    link(rel="stylesheet", href="/css/product.css")

block content 
    main
        if prods.length > 0
            grid
                each product in prods
                    article.card.product-item 
                        header.card__header 
                            h1.product__title #{ product.title } 
                        .card__image 
                            img(src="https://upload.wikimedia.org/wikipedia/commons/b/b5/191125_Taylor_Swift_at_the_2019_American_Music_Awards_%28cropped%29.png", alt="Taylor Swift")
                        .card__content 
                            h2.product__price #{ product.price }
                            p.product__description #{ product.description } 
                        .card__actions 
                            button.btn Add to Cart
        else 
            h1 No products
